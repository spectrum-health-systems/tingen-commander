<Window
    x:Class="TingenCommander.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TingenCommander"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tingen Commander v0.1.0"
    Width="1000"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <!--  Tingen Commander logo  -->
        <Image
            x:Name="image"
            Width="184"
            Height="245"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/AppData/Image/TingenCommander116x154.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/AppData/Image/TingenCommander116x154.png" />
            </Image.OpacityMask>
        </Image>

        <Label
            x:Name="lblLocalMachine"
            Width="184"
            Margin="10,260,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Background="Black"
            Content="Local machine"
            Foreground="White" />
        <Label
            x:Name="lblMachineName"
            Width="50"
            Margin="10,287,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Black"
            BorderBrush="Black"
            BorderThickness="1"
            Content="Name"
            Foreground="White" />
        <TextBox
            x:Name="txbxMachineName"
            Width="135"
            Height="28"
            Margin="59,287,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            RenderTransformOrigin="0.5,0.5"
            Text="---"
            TextWrapping="Wrap">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0.024" />
                    <TranslateTransform />
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label
            x:Name="lblMachineType"
            Width="50"
            Margin="10,316,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Black"
            BorderBrush="Black"
            BorderThickness="1"
            Content="Type"
            Foreground="White" />
        <TextBox
            x:Name="txbxMachineType"
            Width="135"
            Height="28"
            Margin="59,316,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            RenderTransformOrigin="0.5,0.5"
            Text="---"
            TextWrapping="Wrap">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0.024" />
                    <TranslateTransform />
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

        <Label
            x:Name="lblWebServiceHost"
            Width="184"
            Margin="10,354,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Background="Black"
            Content="Web Service Host"
            Foreground="White" />
        <Label
            x:Name="lblHostName"
            Width="50"
            Margin="10,381,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Black"
            BorderBrush="Black"
            BorderThickness="1"
            Content="Name"
            Foreground="White" />
        <TextBox
            x:Name="txbxHostName"
            Width="135"
            Height="28"
            Margin="59,381,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            RenderTransformOrigin="0.5,0.5"
            Text="---"
            TextWrapping="Wrap">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0.024" />
                    <TranslateTransform />
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

    </Grid>
</Window>