<Window
    x:Class="TingenCommander.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TingenCommander"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tingen Commander"
    Width="900"
    Height="500"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>

        <!-- Tingen web service -->
        <Label
            x:Name="lblTingenWebServiceHeader"
            Width="349"
            Height="46"
            Margin="199,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="center"
            BorderBrush="Black"
            BorderThickness="2"
            Content="Tingen web service"
            FontSize="22"
            FontWeight="Bold" />

        <!--  Status  -->
        <Label
            x:Name="lblStatusHeader"
            Width="175"
            Height="28"
            Margin="199,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Background="WhiteSmoke"
            BorderBrush="Black"
            BorderThickness="1"
            Content="STATUS"
            FontSize="12"
            FontWeight="Bold" />
        <Label
            x:Name="lblStatus"
            Width="175"
            Height="28"
            Margin="373,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            Content="Unknown"
            FontSize="12" />

        <!--  Version  -->
        <Label
            x:Name="lblVersionHeader"
            Width="175"
            Height="28"
            Margin="199,82,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Background="WhiteSmoke"
            BorderBrush="Black"
            BorderThickness="1"
            Content="VERSION"
            FontSize="12"
            FontWeight="Bold" />
        <Label
            x:Name="lblVersione"
            Width="175"
            Height="28"
            Margin="373,82,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            Content="00.00.00.00 [b000000.0000]"
            FontSize="12" />


        <!--  Last updated  -->
        <Label
            x:Name="lblLastUpdatedHeader"
            Width="175"
            Height="28"
            Margin="199,108,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Background="WhiteSmoke"
            BorderBrush="Black"
            BorderThickness="1"
            Content="LAST UPDATED"
            FontSize="12"
            FontWeight="Bold" />
        <Label
            x:Name="lblLastUpdated"
            Width="175"
            Height="28"
            Margin="373,108,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            Content="00/00/0000 00:00:00 AM"
            FontSize="12" />

        <!--  Commander mode  -->
        <Label
            x:Name="lblCommanderModeHeader"
            Width="85"
            Margin="10,260,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1"
            Content="Logged in as" />
        <Label
            x:Name="lblCommanderMode"
            Width="100"
            Margin="94,260,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Background="BlanchedAlmond"
            BorderBrush="Black"
            BorderThickness="1"
            Content="Standard user" />

        <!--  Tingen environment selector-->
        <Label
            x:Name="lblEnvironmentHeader"
            Width="85"
            Margin="10,292,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1"
            Content="Environment" />
        <Label
            x:Name="lblEnvironment"
            Width="100"
            Margin="94,292,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Background="LightBlue"
            BorderBrush="Black"
            BorderThickness="1"
            Content="LIVE" Height="28" />

        <!-- Tingen Commander logo -->
        <Image
            x:Name="image"
            Width="184"
            Height="245"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Source="/AppData/Image/TingenCommander116x154.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/AppData/Image/TingenCommander116x154.png" />
            </Image.OpacityMask>
        </Image>


    </Grid>
</Window>
